          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
            <Menu fx:id="cases" mnemonicParsing="false" text="Cases" />
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
          <Menu text="Actions">
              <items>
                  <MenuItem text="Choose Files" onAction="#chooseFiles"/>
                   <MenuItem text="Next Generation" onAction="#nextGeneration"/>
                   <MenuItem text="Reset Scores" onAction="#resetScores"/>      
                   <MenuItem text="Exit" onAction="#abort"/>
