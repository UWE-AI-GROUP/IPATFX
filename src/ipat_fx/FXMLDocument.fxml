        <tabs>
          <Tab text="By Profile" fx:id="byProfilePane"  />
          <Tab text="By Images" fx:id="byImagePane"  />
        </tabs>
      </TabPane>
      
      <Pane fx:id="previewPane" GridPane.columnIndex="2"    />
      </GridPane>
  </center>
  
  <bottom>
      <HBox  spacing="10"  style="-fx-background-color: #336699;" >
      <Button text="ChooseFiles" fx:id="chooseFilesButton" onAction="#chooseFiles"/> 
      <Label   fx:id="gencount" text="Generation" prefWidth="200" />
      <Label   text="No. Of Profiles" prefWidth="200" />
      <TextField   fx:id="noOfProfiles" prefWidth="50"  text="6" />
